
# urxvt
urxvt.geometry: 72x24
urxvt.saveLines: 512
urxvt.scrollBar: false
# urxvt.termName: urxvt

# urxvt.iconFile: /usr/share/icons/Humanity/apps/128/gnome-terminal.svg
urxvt.font: xft:Ricty:Bold:size=18:antialias=true

! color
urxvt.depth: 32
urxvt.foreground: rgba:0000/ffff/0000/ffff
urxvt.background: rgba:0000/0000/0000/7777

! blue
! from http://blog.asial.co.jp/262
urxvt.color4: #5566ff
urxvt.color12: #7799ff

! fadeout urxvt if outfocus
urxvt.fading: 30

! input with IM at cursor position
urxvt.preeditType: OverTheSpot





