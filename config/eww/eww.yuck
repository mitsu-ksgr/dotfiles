(include "./widgets/bar.yuck")


;;-----------------------------------------------------------------------------
;; Window
;;-----------------------------------------------------------------------------
(defwindow bar
  :monitor 0
  :exclusive true
  :geometry (geometry :x "0%"
                      :y "10px"
                      :width "98%"
                      :height "5%"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "5%")
  (bar))


